@model IEnumerable<RetrogameWeb.Data.Entities.Game>

<h2>Games</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

@if (Model.Count() > 0) {
<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.ReleaseDate)</th>
        <th></th>
    </tr>

    @foreach (var game in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => game.Name)</td>
            <td>@Html.DisplayFor(modelItem => game.ReleaseDate)</td>
        </tr>
    }

</table>

} else { <label><b>No Records found.</b></label> }