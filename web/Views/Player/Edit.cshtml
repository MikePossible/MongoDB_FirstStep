@using RetrogameWeb.Data.Entities

@model RetrogameWeb.Data.Entities.Player

@{ ViewBag.Title = "Edit"; }

<h2>Edit Player</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Player</legend>

        <div class="editor-label">@Html.LabelFor(player => player.Name)</div>
        <div class="editor-field">
            @Html.EditorFor(player => player.Name)
            @Html.ValidationMessageFor(player => player.Name)
        </div>

        <div class="editor-label">@Html.LabelFor(player => player.Gender)</div>
        <div class="editor-field">
            @Html.DropDownListFor(player => player.Gender, new SelectList(Enum.GetValues(typeof(Gender))))
            @Html.ValidationMessageFor(player => player.Gender)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>@Html.ActionLink("Back to list", "Index")</div>